<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".userScreen.PrevizEvent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
                android:id="@+id/profPic"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/aggro_zone"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/prof_pic" />

            <EditText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Titlu"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/adresatxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Adresa"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/adresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="1"
                android:text="Adresa"
                android:textColor="@color/textHint"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Data "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/dataXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Data"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/oraStarttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ora inceperii"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/oraEndtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ora terminarii"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/oraStartXml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/aggro_zone"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="Ora" />

                <EditText
                    android:id="@+id/oraEndXml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/aggro_zone"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="Ora" />

            </LinearLayout>

            <TextView
                android:id="@+id/tematicatxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Tematica"
                android:textColor="@color/black"
                android:textSize="18sp" />
            />

            <EditText
                android:id="@+id/tematicaXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Disco"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/numeArtisttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Numele Artistului"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/numeArtistXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Nume"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/genuriMuzicaletxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:gravity="center"
                android:text="Muzica Selectata"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/genuriMuzicaleXml"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Muzica"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descrieretxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Descriere"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/descriereXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Descriere"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tinutatxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Imbracaminte"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/tinutaXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Tinuta"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pretMancaretxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:gravity="center"
                android:text="Mancare"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pretMancareXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="PretMancare"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pretBauturatxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Bautura"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pretBauturaXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="pretBautura"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pretBilettxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:gravity="center"
                android:text="Bilet"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pretBiletXml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/aggro_zone"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="pretBilet"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorPrimary"
        android:tint="#fff"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <ImageButton
        android:id="@+id/butonEditat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/aggro_zone"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/ic_mood_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>